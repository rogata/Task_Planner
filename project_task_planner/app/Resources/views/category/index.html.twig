{% extends 'base.html.twig' %}

{% block body %}
    <h1>Category list</h1>
    {% for category in category %}
        <tr>
            <td>
                {{ category.name }}
            </td>
            <td>
                <ul>
                    <li><a href="{{ path('category_edit', { 'id': category.id }) }}">edit</a></li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    <ul>
        <li>
            <a href="{{ path('app_task_index') }}">Back to the task list</a>
        </li>
    </ul>

{% endblock %}