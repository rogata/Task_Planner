{% extends "base.html.twig" %}

{% block body %}
    <h1>Tasks list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
            <th>Category</th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td><a href="{{ path('task_show', { 'id': task.id }) }}">{{ task.id }}</a></td>
                <td><a href="{{ path('task_show', { 'id': task.id }) }}">{{ task.name }}</a></td>
                <td>{{ task.description }}</td>
                <td>{{ task.date| date }}</td>
                {% if task.category %}
                <td>{{ task.category.name }}</td>
                {% endif %}
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('task_edit', { 'id': task.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('task_new') }}">Create a new task</a>
        </li>
        <li>
            <a href="{{ path('app_category_new') }}">Create a new category</a>
        </li>
    </ul>

{% endblock %}
